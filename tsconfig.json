{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es2017", "es7", "es6"],
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
  },
  "exclude": [
    "node_modules",
    "dist",
    "test",
    "e2e"
  ]
}